<div class="container">
  <h2>プロフィール</h2>
  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size:'80x80' %></p>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>業界</th>
          <th></th>
        </tr>
        <tr>
          <th>勤務地</th>
          <th><%= @user.prefecture.name %></th>
        </tr>
        <tr>
          <th>Give</th>
          <th><%= @user.give %></th>
        </tr>
        <tr>
          <th>Take</th>
          <th><%= @user.take %></th>
        </tr>
        <tr>
          <th>follows:</th>
          <th>
            <%= link_to user_followings_path(@user) do %>
              <%= @user.followings.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>followers:</th>
          <th>
            <%= link_to user_followers_path(@user) do %>
              <%= @user.followers.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <% if @user == current_user %>
            <th><%= link_to "プロフィール編集", edit_user_path(@user) %></th>
          <% else %>
            <td style="border:none;">
              <% if current_user.following?(@user) %>
                <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <!--マイページタブ部分-->
  <ul class="row tab-list list-unstyled">
    <li class="col-4 tab tab-active">
      my post
    </li>
    <li class="col-4 tab">
      follower post
    </li>
    <li class="col-4 tab">
      like post
    </li>
  </ul>
  <!--タブで選択された要素部分-->
  <div class="tabbox-contents">
    <div class="tabbox box-show">
        
    </div>
    <div class="tabbox">
        
    </div>
    <div class="tabbox">
        
    </div>
  </div>
</div>