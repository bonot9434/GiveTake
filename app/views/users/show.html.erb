<div class="container">
  <div class="row">
    <div class="col-2 offset-1 pt-3">
      <p><%= attachment_image_tag @user, :profile_image, :fill, 120, 120, fallback: "noimage.png", size:'120x120', class: "icon" %></p>
      <% unless @user.id == current_user.id %>
        <% if @roomId.blank? %>
          <%= form_with model: @room, local: true do |f|%>
            <%= fields_for @RoomUser do |r| %>
              <%= r.hidden_field :user_id, value: @user.id %>
            <% end %>
            <p class="mt-3"><%= f.submit "チャットを始める", class: "btn btn-outline-secondary"  %></p>
          <% end %>
        <% end %>
      <% end %>
      <% if @user == current_user %>
        <p class="mt-3"><%= link_to "DM一覧", rooms_path, class: "btn btn-outline-success" %></p>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-primary"  %></p>
      <% else %>
        <div class="follow-btn">
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-primary" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-outline-success" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-8 offset-1">
      <div class="pt-5 pb-3 name"><strong><%= @user.name %></strong></div>
      <div class="d-flex">
        <p class="col-3"><%= link_to "フォロー", user_followings_path(@user) %></p>
        <p><%= @user.followings.count %></p>
      </div>
      <div class="d-flex">
        <p class="col-3"><%= link_to "フォロワー",user_followers_path(@user) %></p>
        <p><%= @user.followers.count %></p>
      </div>
      <div class="d-flex">
        <p class="col-3"><%= link_to "業界", industry_path %></p>
        <p><%= @user.industry.name %></p>
      </div>
      <div class="d-flex">
        <p class="col-3"><%= link_to "勤務地", map_path %></p>
        <p><%= @user.prefecture.name %></p>
      </div>
    </div>
  </div>
  <table class="table col-10 offset-1 mt-4">
    <thead>
      <tr>
        <th class="col-1 align-top">Give</th>
        <th><%= @user.give %></th>
      </tr>
      <tr>
        <th class="col-1 align-top">Take</th>
        <th><%= @user.take %></th>
      </tr>
      <tr>
        <th class="col-1 align-top">introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </thead>
  </table>
  <!--マイページタブ部分-->
  <ul class="row tab-list list-unstyled">
    <li class="col-4 tab tab-active text-center">
      My Post
    </li>
    <li class="col-4 tab text-center">
      Follower Post
    </li>
    <li class="col-4 tab text-center">
      Like Post
    </li>
  </ul>
  <!--タブで選択された要素部分-->
  <div class="tabbox-contents">
    <div class="col-8 offset-2 tabbox box-show">
      <%= render 'posts/post', posts: @posts %>
    </div>
    <div class="col-8 offset-2 tabbox">
      <%= render 'posts/post', posts: @follow_post %>
    </div>
    <div class="col-8 offset-2 tabbox" id="like_posts_list">
      <%= render 'posts/post_like', posts: @like_post %>
    </div>
  </div>
</div>