<div id="post-<%=post.id%>">
  <%= l post.created_at %>
  <%= link_to user_path(post.user) do %>
    <p><%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
    <%= post.user.name %></p>
  <% end %>
  <%= link_to post_path(post.id) do %>
    <p><%= post.body %></p>
    <p><%= attachment_image_tag post, :image, :fill, 60, 60 %></p>
  <% end %>
  <div>
    タグ：<p class="badge badge badge-info">
    <% Tag.all.each do |list|%>
      <%=link_to list.name,search_tag_path(tag_id: list.id) %>
    <% end %></p>
  </div>
  <div class="like-btn">
    <div class="like_btn_<%= post.id %>">
      <%= render "likes/like", post: post %>
    </div>
  </div>
    <div>コメント数:<%= post.post_comments.count %></div>
</div>