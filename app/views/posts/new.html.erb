<div>
  <div class="col-6 offset-3">
    <h1 class="mt-3">New</h1>
    <%= form_with model: @post, local:true do |f| %>
      <div class="mt-2"><%= f.label "本文" %></div>
      <div><%= f.text_area :body, rows: "4", class: "col-12" %></div>
      <div><%= f.label"タグ" %></div>
      <div>
        <%= f.check_box :give %>
        <%= f.label :give %>
        <%= f.check_box :take %>
            <%= f.label :take %>
      </div>
      <div><%= f.text_field :name, data: {role: "tagsinput"}%></div>
      <div class="mt-2"><%= f.label "画像" %></div>
      <div><%= f.attachment_field :image %></div>
      <div>
      <%= f.submit "投稿", class: "btn btn-outline-secondary fas fa-pen col-4 offset-4 mt-5" %>
    <% end %>
  </div>
</div>

<i class="fas fa-pen"></i>
<i class="fas fa-tag"></i>
<i class="far fa-trash-alt"></i>
<i class="fas fa-user"></i>
<i class="fas fa-edit"></i>
<i class="fas fa-reply"></i>