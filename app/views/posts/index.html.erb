<div class="container">
  <%= link_to "新規投稿", new_post_path %>
  <div class="row">
    <div class="col-2" style="line-height:3rem" >
      <p class="h5 font-weight-bold">投稿が多いタグ</p>
      <% @tag_rank.each do |tr| %>
        <div><%= link_to tr.name, search_tag_path(tag_id: tr.id) %>
        <%="(#{tr.posts.count})" %></div>
      <% end %>
    </div>
    <div class="col-8">
      <%= render 'posts/post', posts: @posts %>
    </div>
  </div>
</div>
