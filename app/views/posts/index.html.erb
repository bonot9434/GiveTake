<div class="container">
  <%= link_to "新規投稿", new_post_path %>
  <div>
    <h2>Post</h2>
    <% @posts.each do |post| %>
      <%= l post.created_at %>
      <%= link_to user_path(post.user) do %>
        <p><%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
        <%= post.user.name %></p>
      <% end %>
      <%= link_to post_path(post.id) do %>
        <p><%= post.body %></p>
        <p><%= attachment_image_tag post, :image, :fill, 60, 60 %></p>
      <% end %>
      <% if post.liked_by?(current_user) %>
        <%= link_to post_likes_path(post), method: :delete do %>
          <i class="fa fa-heart" aria-hidden="true" style="color: red;"><%= post.likes.count %></i>
          <!--area-hidden音声読み上げ-->
        <% end %>
      <% else %>
        <%= link_to post_likes_path(post), method: :post do %>
          <i class="fa fa-heart" aria-hidden="true"><%= post.likes.count %></i>
        <% end %>
      <% end %>
      <div>コメント数:<%= post.post_comments.count %></div>
      <div>タグ：<p class="badge badge badge-info"><%= post.tags.map(&:name).join(',') %></p></div>
    <% end %>
  </div>
</div>
