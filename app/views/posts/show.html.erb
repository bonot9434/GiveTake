<div class="container">
  <div class="col-8 offset-2">
  <div class="border mt-3">
    <div class="offset-1"><%= l @post.created_at %></div>
    <div class="row">
      <div class="col-3 offset-2">
        <%= link_to user_path(@post.user) do %>
          <p><%= attachment_image_tag @post.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size:'80x80' %></p>
          <p><%= @post.user.name %></p>
        <% end %>
      </div>
      <div class="col-5 post">
        <p><%= @post.body %></p>
        <p><%= attachment_image_tag @post, :image, :fill, 200, 200 %></p>
        <div>
          <% @post_tags.each do |tag| %>
          <div><i class="fas fa-tag"></i><%= link_to tag.name,search_tag_path(tag_id: tag.id)%></div>
          <% end %>
          <div class="d-flex">
            <div class="like-btn">
              <div class="like_btn_<%= @post.id %>">
                <%= render "likes/like", post: @post %>
              </div>
            </div>
            <div class="offset-1">
              コメント数:<%= @post.post_comments.count %>
            </div>
            <div class="offset-1">
              <% if @post.user == current_user %>
                <%= link_to "", edit_post_path(@post), class: "fbtn btn fas fa-edit" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="offset-3 mt-3 mb-3">
    <%= form_with(model:[@post,@post_comment], local: true) do|f| %>
      <div><%= f.text_area :comment, rows: "5", cols: "40", placeholder: "ここに入力" %></div>
        <%= f.submit "コメント", class: "btn btn-outline-secondary fas fa-pen" %>
    <% end %>
  </div>
  <% @post.post_comments.each do |post_comment| %>
    <div class="border">
      <div class="offset-1 mt-3"><%= l post_comment.created_at %></div>
      <div class="row">
        <div class="col-3 offset-2">
          <p><%= attachment_image_tag post_comment.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size:'80x80' %></p>
          <p><%= post_comment.user.name %></p>
        </div>
        <div class="col-5">
          <p><%= post_comment.comment %></p>
          <% if post_comment.user == current_user %>
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-outline-secondary fas fa-trash" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
