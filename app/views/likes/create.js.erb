  $(".like_btn_<%= @post.id %>").html("<%= j(render "likes/like", post: @post, current_user_like_list: @current_user_like_list ) %>");
<% else %>
  $(".like_btn_<%= @post.id %>").html("<%= j(render "likes/like", post: @post, current_user_like_list: @current_user_like_list ) %>");
<% end %>