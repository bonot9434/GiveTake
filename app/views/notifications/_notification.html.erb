<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="ml-5 mt-3">
 <%= link_to user_path(visitor) do %>
     <%= visitor.name %>さん
 <% end %>
 <% if notification.action == 'post_comment' %>
    が
    <%= link_to post_path(notification.post_id) do %>
      <strong><%= notification.post.body.truncate(20)%></strong>
    <% end %>にコメントしました。
    <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
 <% elsif %>
   <% notification.action == 'dm' %>
    から
    <%= link_to room_path(notification.room_id) do %>
      <strong>DM</strong>
    <% end %>が届いています。
     <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
 <% end %>
</div>